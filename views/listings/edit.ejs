<% layout('/layouts/boilerplate') -%>
<div class="row mt-3">
  <br><br>
  <div class="col-8 offset-2">
    <title>WanderLust</title>
    <h3>Edit your Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listings[title]" value="<%= listing.title %>" type="text" class="form-control"/>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
      <textarea name="listings[scrip]" class="form-control">
      <%= listing.description %></textarea >
      </div>
      
      <div class="mb-3">
        <label for="image" class="form-label">Image Link</label>
      <input name="listings[image]" value="<%= listing.image %>" type="text" class="form-control"/>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
        <input name="listings[price]" value="<%= listing.price %>" type="number" class="form-control" />
        </div>
  
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
        <input
          name="listings[country]"
          value="<%= listing.country %>"
          type="text"
          class="form-control"
        />
        </div>
      </div>
      
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
      <input
        name="listings[location]"
        value="<%= listing.location %>"
        type="text"
        class="form-control"
      />
      </div>
      
      <button class="btn btn-dark add-btn mt-3" >Edit</button>
      <br><br>
    </form>
</div>
</div>